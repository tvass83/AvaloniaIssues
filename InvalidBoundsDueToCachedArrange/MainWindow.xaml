<Window x:Class="AvaloniaApplication54_BusyIndicatorDialogScrambled.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvaloniaApplication54_BusyIndicatorDialogScrambled"
        Title="AvaloniaApplication54_BusyIndicatorDialogScrambled"
        d:DesignWidth="800"
        d:DesignHeight="450"
        mc:Ignorable="d">

    <Window.DataContext>
        <local:VM />
    </Window.DataContext>

    <Panel Background="Black">
        <Button x:Name="_btn"
                Content="show/hide"
                HorizontalAlignment="Center"
                VerticalAlignment="Top" />

        <Panel IsVisible="{Binding IsBusy}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center">

            <Border Background="White"
                    BorderBrush="Red"
                    BorderThickness="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20">

                <TextBlock Text="{Binding BusyContent}" />
            </Border>
        </Panel>
    </Panel>
</Window>
